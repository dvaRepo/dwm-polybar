[module/filesystem]
type = custom/script
interval = 25
format-prefix = "ï‚  "
format-prefix-foreground = ${colors.gray}
exec = df -h / | awk '{print $3}' | grep G
label = %output%
label-foreground = ${colors.sand}
click-left = nemo


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "ï‹› "
format-prefix-foreground = ${colors.orange}
label = %percentage:1%%
label-foreground = ${colors.sand}

[module/memory]

type = custom/script
interval = 2
format-prefix = "ï”¸ "
format-prefix-foreground = ${colors.orange}
format-padding = 1
exec = free -h | awk '{print $3}' | grep M | tr -d 'i'
label = %output%
label-foreground = ${colors.sand}

[module/date]
type = custom/script
interval = 5
exec = date +"%D %I:%M" | tr '/' '.'
format = <label>
format-padding = 1
format-prefix = "ï³ " 
format-prefix-foreground = ${colors.blue}
label = %output%
label-foreground = ${colors.sand}
click-left = gsimplecal

